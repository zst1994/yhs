page {
  width: 100%;
  height: 100%;
}

.shops-box {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.search {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.search-shops {
  display: flex;
  flex: 1;
  align-items: center;
  padding: 15rpx 20rpx;
  margin-right: 30rpx;
  background: #f8f8f8;
  border-radius: 34rpx;
  box-sizing: border-box;
}

.search-shops-icon {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

.search-shops-placeholder {
  font-size: 28rpx;
  color: #999;
}

.search-btn {
  font-size: 30rpx;
  color: #fff;
  padding: 15rpx 40rpx;
  background-color: #F4A460;
  border-radius: 34rpx;
}

.shops-list {
  display: flex;
  flex: 1;
  flex-direction: column;
  width: 100%;
}

.shops-list-title {
  position: relative;
  padding: 25rpx 58rpx;
  margin-top: 30rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.shops-list-title::before {
  position: absolute;
  content: "";
  left: 25rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 40rpx;
  background-color: #F4A460;
  border-radius: 4rpx;
}

.shops-list-title-left {
  font-size: 30rpx;
  color: #666;
}

.shops-list-title-right {
  display: inline-block;
  font-size: 24rpx;
  color: #F4A460;
  margin-left: 25rpx;
}

.shops-list-body {
  flex: 1;
  height: 1px;
}

.shop-mess {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15rpx 25rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-top: 1rpx solid #f8f8f8;
}

.shop-mess-top,
.shop-mess-bottom {
  display: flex;
  align-items: center;
  margin: 10rpx 0;
}

.shop-mess-top text {
  font-size: 30rpx;
  color: #444;
}

.shop-mess-bottom text {
  font-size: 26rpx;
  color: #999;
}

.shop-icon {
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  margin-right: 10rpx;
}

.shop-mess-right {
  font-size: 30rpx;
  color: #666;
}

.warn-text {
  display: inline-block;
  width: 100%;
  font-size: 28rpx;
  color: #999;
  text-align: center;
  margin-top: 30rpx;
}