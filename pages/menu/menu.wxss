page {
  height: 100%;
}

.menu-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.shop-address::before {
  position: absolute;
  content: "";
  left: 25rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 40rpx;
  background-color: #F4A460;
  border-radius: 4rpx;
}

.shop-address {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  padding: 20rpx 30rpx 20rpx 50rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.shop-address text {
  font-size: 26rpx;
  color: #666;
}

.address text {
  font-size: 32rpx;
  color: #666;
}

.address image {
  width: 12rpx;
  height: 21rpx;
  margin-left: 15rpx;
}

.swiper {
  flex: 1;
  width: 100%;
  height: 1px;
}

.swiper-item {
  display: flex;
  flex-direction: column;
}

.product-list {
  display: flex;
  flex: 1;
  width: 100%;
  background-color: #fff;
}

.product-type {
  flex: 3;
  background-color: #f8f8f8;
}

.type-name {
  position: relative;
  padding: 25rpx 0;
  text-align: center;
  font-size: 32rpx;
  color: #333;
}

.type-name.on {
  color: #fff;
  background-color: #222;
}

.type-name.on::before {
  position: absolute;
  content: "";
  left: 0;
  top: 0;
  width: 8rpx;
  height: 100%;
  background-color: #F4A460;
}

.product {
  flex: 9;
}

.product-shopBox {
  display: flex;
  align-items: center;
  height: 190rpx;
  padding: 25rpx 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f8f8f8;
}

.shopBox-img {
  display: block;
  width: 140rpx;
  height: 140rpx;
  margin-right: 20rpx;
}

.shopBox-info {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
}

.shopBox-info-title {
  font-size: 32rpx;
  color: #666;
}

.shopBox-info-sales {
  font-size: 28rpx;
  color: #999;
}

.specs-box-shop,
.add-shop {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

.add-shop-price {
  font-size: 32rpx;
  color: #ff0066;
}

.lower-icon,
.add-icon {
  width: 50rpx;
  height: 50rpx;
}

.add-icon image {
  width: 100%;
  height: 100%;
}

.check-limit {
  position: relative;
  font-size: 32rpx;
  color: #fff;
  padding: 10rpx 30rpx;
  background-color: #F4A460;
  border-radius: 40rpx;
}

.right-top {
  position: absolute;
  top: -24rpx;
  right: 0;
  width: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background-color: #ff0066;
  border-radius: 50%;
  z-index: 99;
}

.total-price {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  background-color: #fff;
}

.price {
  flex: 3;
  display: flex;
  justify-content: space-around;
  padding: 30rpx 0;
}

.price text {
  font-size: 28rpx;
  color: #666;
}

.price-start {
  flex: 2;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  padding: 30rpx 0;
  background-color: #f8f8f8;
}

.price-start.on {
  color: #fff;
  background-color: #F4A460;
}

.shop-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 35rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-top: 1rpx solid #f8f8f8;
}

.shop-info-left {
  display: flex;
  align-items: center;
}

.shop-info-left image {
  display: inline-block;
  width: 38rpx;
  height: 38rpx;
  margin-right: 15rpx;
}

.shop-info-left text {
  font-size: 32rpx;
  color: #999;
}

.shop-info-right {
  font-size: 28rpx;
  color: #999;
}

.lower,
.add-lower {
  display: flex;
  align-items: center;
  justify-content: center;
}

.lower text {
  display: inline-block;
  font-size: 30rpx;
  color: #666;
  margin: 0 10rpx;
}

.show-product {
  width: 100%;
}

.show-product image {
  width: 90%;
  margin: 40rpx auto;
  border-radius: 20rpx;
}

.show-product-info {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 0 40rpx 40rpx;
}

.show-product-info text {
  display: inline-block;
  font-size: 32rpx;
  color: #666;
}

.show-product-info .show-product-price {
  font-size: 30rpx;
  color: #ff0066;
  margin: 15rpx 0;
}

.specs-box {
  position: relative;
}

.specs-title {
  font-size: 32rpx;
  color: #666;
  padding: 40rpx 0;
}

.specs-body {
  padding: 20rpx 40rpx;
  background-color: #f8f8f8;
  box-sizing: border-box;
}

.specs-body text {
  display: inline-block;
  width: 100%;
  font-size: 32rpx;
  color: #666;
  text-align: left;
  padding: 20rpx 0;
}

.specs-body-limit {
  display: flex;
  align-items: center;
  padding: 0 0 20rpx;
}

.limit {
  color: #F4A460;
  padding: 15rpx 25rpx;
  margin-right: 20rpx;
  background-color: #fff;
  border: 1rpx solid #F4A460;
  border-radius: 10rpx
}

.limit.on {
  color: #fff;
  background-color: #F4A460;
}

.specs-box-shop {
  padding: 30rpx;
  box-sizing: border-box;
}

.shopping-cart {
  padding-bottom: 80rpx;
}

.clean-product-list {
  font-size: 32rpx;
  color: #666;
  padding: 25rpx 35rpx;
  text-align: right;
  background-color: #f8f8f8;
  border-radius: 20rpx 20rpx 0 0;
  box-sizing: border-box;
}

.shopping-box {
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  border-top: 1rpx solid #f8f8f8;
}

.shopping-title {
  flex: 4;

}

.shopping-title,
.shopping-price {
  font-size: 32rpx;
  color: #666;
}

.shopping-price,
.shopping-add-lower {
  flex: 3;
}